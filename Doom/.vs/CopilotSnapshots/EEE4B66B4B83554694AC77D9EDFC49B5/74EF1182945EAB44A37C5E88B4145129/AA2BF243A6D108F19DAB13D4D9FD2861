using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Doom
{
    internal class Player
    {
        public Position Pos { get; set; }
        public ConsoleSprite Sprite { get; set; }
        public double FillingRatio { get; set; }
        public int Ammo { get; set; } = 10;

        private int _hitPoint = 100; // backing field with initial value
        public int HitPoint
        {
            get { return _hitPoint; }
            set
            {
                _hitPoint = Math.Clamp(value, 0, 100); // Ensures value is between 0 and 100
            }
        }
        public int BFGCells { get; set; } = 2;

        public Player(int PosX, int PosY)
        {
            this.Pos = new Position(PosX, PosY);
            this.Sprite = new ConsoleSprite(ConsoleColor.Black, ConsoleColor.Green, 'O');
            this.FillingRatio = 0.4;
        }
    }
}
